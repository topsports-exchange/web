// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
}

model MakerSignature {
  id                     Int       @id @default(autoincrement())
  maker                  String
  spender                String
  homeTeamOdds           String
  awayTeamOdds           String
  limit                  String
  nonce                  String
  deadline               String
  signature              String

  // Normalized fields
  homeTeamOddsNormalized Int
  awayTeamOddsNormalized Int
  limitNormalized       Int
  deadlineNormalized    DateTime

  eventDate   DateTime  // denormal DeployedEvent
}

model DeployedEvent {
  id          Int       @id @default(autoincrement())
  eventId     String    @unique // ESPN API
  displayName String
  eventDate   DateTime
  deadline    DateTime  // The date after when users can reclaim their funds if the event has not been settled by the external sport data provider.
  address     String    @unique // contract
  salt        String    @unique
}